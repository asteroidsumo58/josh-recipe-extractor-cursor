{
  "name": "cursor-recipe-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:unit": "vitest run src/test --exclude '**/e2e-*.test.ts'",
    "test:e2e": "vitest run src/test/e2e-*.test.ts",
    "test:ci": "vitest run --reporter=verbose --coverage",
    "fetch:recipes": "node ./scripts/fetch-recipes.js",
    "test:recipes": "vitest run src/test/e2e-batch-recipes.test.ts",
    "audit:recipes": "vitest run src/test/e2e-audit.test.ts",
    "pipeline:recipes": "node ./scripts/fetch-recipes.js && vitest run src/test/e2e-audit.test.ts",
    "selftest:fetch": "node ./scripts/fetch-recipes.js ./scripts/selftest-urls.json",
    "selftest:run": "vitest run src/test/e2e-selftest.test.tsx",
    "selftest:pipeline": "node ./scripts/fetch-recipes.js ./scripts/selftest-urls.json && vitest run src/test/e2e-selftest.test.ts"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-slot": "^1.2.3",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "lru-cache": "^11.1.0",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recipe-ingredient-parser-v3": "^1.5.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jsdom": "^26.1.0",
    "shadcn": "^3.2.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
